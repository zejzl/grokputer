# xAI Grok API Configuration (REQUIRED)
# Get your API key from: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here
# Model Configuration
GROK_MODEL=grok-4-fast-reasoning
# xAI API Base URL (OpenAI-compatible endpoint)
XAI_BASE_URL=https://api.x.ai/v1

# Anthropic Claude API Configuration (REQUIRED for collaboration mode only)
# Get your API key from: https://console.anthropic.com/
# Used when running: python main.py -mb --task "your task"
ANTHROPIC_API_KEY=your_anthropic_api_key_here

#GEMINI_API_KEY=your_gemini_api_key_here

# Safety Settings
REQUIRE_CONFIRMATION=false

# Vault Configuration
VAULT_PATH=./vault

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/grokputer.log

# Screenshot Settings
SCREENSHOT_QUALITY=75
MAX_SCREENSHOT_SIZE=1920x1080

# Collaboration Mode Settings (optional)
# Print unified plan to console after generation
PRINT_PLAN=false
# Convergence threshold for consensus detection (0-1, default: 0.6)
CONVERGENCE_THRESHOLD=0.6
# Maximum collaboration rounds (default: 5)
MAX_COLLABORATION_ROUNDS=5
