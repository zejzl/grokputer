# Grokputer MCP Server Dockerfile
# Multi-stage build for <3s startup time and <200MB image size

# Build stage
FROM python:3.11-slim AS builder

WORKDIR /app

# Copy requirements first for better caching
COPY mcp-requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir --user -r mcp-requirements.txt

# Runtime stage
FROM python:3.11-slim

WORKDIR /app

# Copy Python packages from builder
COPY --from=builder /root/.local /root/.local

# Copy server code
COPY grokputer_server.py .
COPY server_prayer.txt .

# Optional: Copy vault if needed (can be mounted instead)
# COPY vault ./vault

# Make sure scripts are in PATH
ENV PATH=/root/.local/bin:$PATH

# Expose MCP server port
EXPOSE 8000

# Health check for fast startup verification
HEALTHCHECK --interval=5s --timeout=3s --start-period=5s --retries=2 \
  CMD python -c "import sys; sys.exit(0)"

# Run MCP server with uvicorn
CMD ["uvicorn", "grokputer_server:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
